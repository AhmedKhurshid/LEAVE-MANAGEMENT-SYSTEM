<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    tools:context=".Dashboard_admin">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/tvid"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="24dp"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="32dp"
           android:text=" 1001"
           android:textColor="@color/white"
           android:textSize="15sp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/tvjdate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="32dp"
           android:text=" 2/5/21"
           android:textColor="@color/white"
           android:textSize="15sp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.931"
           app:layout_constraintStart_toEndOf="@+id/tvid"
           app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:id="@+id/iv2"
           android:layout_width="130dp"
           android:layout_height="130dp"
           android:layout_marginTop="40dp"
           android:src="@drawable/placehoder"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.498"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/tvep"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:layout_marginLeft="8dp"
           android:layout_marginTop="12dp"
           android:gravity="center"
           android:text="USER NAME"
           android:textColor="@color/white"
           android:textSize="16sp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/iv2" />

       <TextView
           android:id="@+id/tvm"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="4dp"
           android:layout_marginLeft="4dp"
           android:gravity="center"
           android:text="ADMIN"
           android:textColor="@color/white"
           android:textSize="14sp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/tvep" />

       <Button
           android:id="@+id/btnpae"
           android:layout_width="300dp"
           android:layout_height="60dp"
           android:layout_marginTop="32dp"
           android:onClick="adde"
           android:text="Add Employee"
           android:textColor="@color/white"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/tvm" />

       <Button
           android:id="@+id/btnpm"
           android:layout_width="300dp"
           android:layout_height="60dp"
           android:layout_marginTop="8dp"
           android:onClick="addm"
           android:text="Add Manager"
           android:textColor="@color/white"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.495"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/btnpae" />

       <Button
           android:id="@+id/btnpl"
           android:layout_width="300dp"
           android:layout_height="60dp"
           android:layout_marginTop="8dp"
           android:onClick="btnl"
           android:text="Leave"
           android:textColor="@color/white"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.495"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/btnpm" />

       <Button
           android:id="@+id/btnep"
           android:layout_width="300dp"
           android:layout_height="60dp"
           android:layout_marginTop="8dp"
           android:onClick="btne"
           android:text="Employees"
           android:textColor="@color/white"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.495"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/btnpl" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>